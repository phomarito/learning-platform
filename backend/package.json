    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.5",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "uuid": "^13.0.0"
